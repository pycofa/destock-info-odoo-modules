<odoo>
    <template id="buyback_form" name="Buyback Form">
        <section class="s_website_form pt16 pb16" data-vcss="001" data-snippet="s_website_form">
            <div class="container">

                <form action="/website/form/" method="post" enctype="multipart/form-data"
                      class="o_mark_required" data-mark="*" data-pre-fill="true" data-model_name="buyback.request"
                      data-success-mode="redirect" data-success-page="/contactus-thank-you">

                    <div class="s_website_form_rows row s_col_no_bgcolor">

                        <div data-name="Field"
                             class="s_website_form_field mb-3 col-12 s_website_form_required"
                             data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="s_website_form_label d-none"
                                       style="width: 200px"
                                       for="name_field">
                                    <span class="s_website_form_label_content">Name*</span>
                                </label>
                                <div class="col-sm">
                                    <input class="form-control s_website_form_input"
                                           type="text"
                                           name="name" id="name_field"
                                           placeholder="Name*" required="1"
                                           data-fill-with="name"/>
                                </div>
                            </div>
                        </div>

                        <div data-name="Field"
                             class="s_website_form_field mb-3 col-12 s_website_form_model_required"
                             data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label d-none"
                                       style="width: 200px"
                                       for="email_field">
                                    <span class="s_website_form_label_content">Email</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <input class=" form-control s_website_form_input"
                                           type="email" id="email_field"
                                           placeholder="E-mail*" name="email"
                                           required="1"
                                           data-fill-with="email"/>
                                </div>
                            </div>
                        </div>

                        <div data-name="Field"
                             class="s_website_form_field mb-3 col-12 s_website_form_model_required"
                             data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label d-none"
                                       style="width: 200px"
                                       for="phone_field">
                                    <span class="s_website_form_label_content">Phone</span>
                                </label>
                                <div class="col-sm">
                                    <input class=" form-control s_website_form_input"
                                           type="tel"
                                           name="phone" id="phone_field"
                                           placeholder="Phone" data-fill-with="phone"/>
                                </div>
                            </div>
                        </div>

                        <div data-name="Field"
                             class="s_website_form_field mb-3 col-12 s_website_form_model_required"
                             data-type="char">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label d-none"
                                       style="width: 200px"
                                       for="subject_field">
                                    <span class="s_website_form_label_content">Subject</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <input class=" form-control s_website_form_input" type="text"
                                           name="subject"
                                           placeholder="Subject*"
                                           required="" id="subject_field"/>
                                </div>
                            </div>
                        </div>

                        <div data-name="Field"
                             class="s_website_form_field mb-3 col-12"
                             data-type="text">
                            <div class="row s_col_no_resize s_col_no_bgcolor">
                                <label class="col-form-label col-sm-auto s_website_form_label d-none"
                                       style="width: 200px"
                                       for="content_field">
                                    <span class="s_website_form_label_content">Content</span>
                                    <span class="s_website_form_mark">*</span>
                                </label>
                                <div class="col-sm">
                                    <textarea class="form-control s_website_form_input"
                                              rows="3"
                                              name="content"
                                              placeholder="Content*"
                                              required="1" id="content_field"/>
                                </div>
                            </div>
                        </div>

                        <div class="s_website_form_field col-12 py-2 mb-0"
                             data-type="binary"
                             data-name="Field">
                            <div class="s_col_no_resize s_col_no_bgcolor row">
                                <label class="col-form-label col-sm-auto s_website_form_label d-none"
                                       style="width: 200px"
                                       for="file_field">
                                    <span class="s_website_form_label_content d-none">Upload a document</span>
                                </label>
                                <div class="col-sm">
                                    <input id="file_field" type="file"
                                           class="bg-light s_website_form_input form-control"
                                           name="attached_file"/>
                                </div>
                            </div>
                        </div>

                        <div class="mb-0 py-2 col-12 s_website_form_submit" data-name="Submit Button">
                            <div style="width: 200px;" class="s_website_form_label"/>
                            <a href="#" role="button" class="btn btn-primary s_website_form_send">Submit</a>
                            <span id="s_website_form_result"></span>
                        </div>
                    </div>
                </form>
            </div>
        </section>

    </template>

    <template id="buyback_form_snippet" inherit_id="website.snippets" name="Buyback Form Snippet">
        <xpath expr="//div[@id='snippet_destockinfo']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="website_buyback_request.buyback_form"
               t-thumbnail="/destockinfo_website/static/img/snippets/snippet_thumb/s_home_hero.svg"/>
        </xpath>
    </template>

</odoo>
