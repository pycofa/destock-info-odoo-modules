<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pwa_settings']" position="before">
                <block title="Buyback request" name="buyback request">
                    <setting
                            help="Enter 'email to' for buyback request."
                            title="Email To">
                        <field name="email_to"/>
                    </setting>
                    <setting
                            help="Enter 'email cc' for buyback request. If you want to enter several email,
                                please separate by comma."
                            title="Email CC">
                        <field name="email_cc"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
