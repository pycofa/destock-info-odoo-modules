<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_buyback_request_tree" model="ir.ui.view">
        <field name="name">buyback.request.tree</field>
        <field name="model">buyback.request</field>
        <field name="arch" type="xml">
            <tree string="Buyback Requests" create="false" edit="false">
                <field name="subject"/>
                <field name="name" string="Contact name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="content"/>
            </tree>
        </field>
    </record>

    <record id="view_buyback_request_form" model="ir.ui.view">
        <field name="name">buyback.request.form</field>
        <field name="model">buyback.request</field>
        <field name="arch" type="xml">
            <form string="Buyback Requests">
                <group>
                    <field name="subject" readonly="1"/>
                </group>
                <group>
                    <group>
                        <field name="name" readonly="1"  string="Contact name"/>
                        <field name="phone" readonly="1"/>
                        <field name="email" readonly="1"/>
                    </group>
                    <group>
                        <field name="content" readonly="1"/>
                        <field name="attached_file" widget="binary" readonly="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_buyback_request" model="ir.actions.act_window">
        <field name="name">Buyback Requests</field>
        <field name="res_model">buyback.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_buyback_request_root"
            name="Buyback Requests"
            parent="website.menu_website_configuration"
            action="action_buyback_request"
            sequence="10"
    />

</odoo>
