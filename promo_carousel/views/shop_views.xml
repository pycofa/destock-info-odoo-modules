<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="products" inherit_id="website_sale.products">

        <xpath expr="//div[@t-if='products']" position="before">
            <div id="carouselExampleControls" class="carousel slide mb-4" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <t t-set="is_first_item" t-value="True"/>
                        <t t-foreach="promos" t-as="promo">
                            <t t-if="promo.activate">
                                <div t-att-class="'carousel-item' + (' active' if is_first_item else '')">
                                    <t t-set="is_first_item" t-value="False"/>
                                    <t t-set="product_href" t-value="keep(promo.product_tmpl_id.website_url, page=(pager['page']['num'] if pager['page']['num']>1 else None))" itemprop="url"/>
                                    <a t-att-href="product_href">
                                        <img
                                            class="img-fluid"
                                            t-if="promo.image"
                                            t-att-src="image_data_uri(promo.image)"
                                        />
                                    </a>
                                </div>
                            </t>
                        </t>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"/>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"/>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </xpath>
    </template>
</odoo>