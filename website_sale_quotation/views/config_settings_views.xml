<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="res_config_settings_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='shop_management']" position="inside">
                <block title="Quotation form" name="add_to_cart_management">
                    <field name="allow_quotation_settings" invisible="True"/>
                    <setting
                            invisible="not allow_quotation_settings"
                            help="This parameter activates the quotation's form in product page."
                            title="Display quotation's form"
                            id="ecommerce_show_form_quotation">
                        <field name="ecommerce_show_form_quotation"/>
                    </setting>
                    <setting
                            invisible="not allow_quotation_settings"
                            help="The email address on which you will receive the quote."
                            title="'Email To' for quotation"
                            id="email_to_for_quotation"
                    >
                        <field name="email_to_for_quotation"/>
                    </setting>
                    <setting
                            invisible="not allow_quotation_settings"
                            help="the email address on which you will receive on copy the quote."
                            title="'Email CC' for quotation"
                            id="email_cc_for_quotation"
                    >
                        <field name="email_cc_for_quotation"/>
                    </setting>

                </block>
            </xpath>
        </field>
    </record>

</odoo>
