<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

<t t-name="pyper_discuss.DiscussSidebarStartMeeting" t-inherit="mail.DiscussSidebarStartMeeting" t-inherit-mode="extension">
    <xpath expr="//div" position="attributes">
        <attribute name="t-if">threadService.displayMode === 'channels'</attribute>
    </xpath>

    <xpath expr="//hr" position="attributes">
        <attribute name="t-if">threadService?.displayMode !== 'channels'</attribute>
    </xpath>
</t>

</templates>
