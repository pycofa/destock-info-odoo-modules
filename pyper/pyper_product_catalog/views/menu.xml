<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem
        id="product_catalog_root"
        name="Catalog"
        sequence="20"
        web_icon="pyper_product_catalog,static/img/icon.png"
    />

    <menuitem
        id="product_catalog"
        name="Products"
        parent="pyper_product_catalog.product_catalog_root"
        action="pyper_product_catalog.product_template_action"
        sequence="1"
    />

    <menuitem
        id="product_import_root"
        name="Import"
        parent="pyper_product_catalog.product_catalog_root"
        sequence="10"
    />

    <menuitem
        id="product_settings_menu"
        name="Settings"
        parent="pyper_product_catalog.product_catalog_root"
    >
        <menuitem
            id="product_categories"
            name="Products categories"
            action="product.product_category_action_form"
            sequence="10"
        />
        
        <menuitem
            id="product_manufacturer"
            name="Product manufacturers"
            action="pyper_product_catalog.product_manufacturer_action"
            sequence="0"
        />

        <menuitem
            id="product_attributes"
            name="Product attributes"
            action="product.attribute_action"
            sequence="11"
            groups="product.group_product_variant"
        />
    </menuitem>

    <record model="ir.ui.menu" id="pyper_product_catalog.product_catalog_root">
        <field name="font_icon">ph ph-package</field>
        <field name="category_id" ref="pyper_menu.menu_category_global"/>
    </record>

</odoo>
