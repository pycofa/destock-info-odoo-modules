<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inherit_view" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Product Condition" name="product_condition" logo="/pyper_product_condition/static/src/img/box.svg">
                    <block title="Product management" name="product_condition_management">
                        <setting
                            help="Display variant standard price"
                            title="Display on product page variant standard price"
                            id="group_product_show_variant_standard_price">
                            <field name="group_product_show_variant_standard_price"/>
                        </setting>

                        <setting
                            help="Display variant list price"
                            title="Display on product page variant list price"
                            id="group_product_show_variant_list_price">
                            <field name="group_product_show_variant_list_price"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
