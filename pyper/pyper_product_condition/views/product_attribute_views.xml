<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_attribute_view_form" model="ir.ui.view">
        <field name="name">product.attribute.form.inherit</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='attribute_values']//field[@name='value_ids']//field[@name='name']" position="after">
                <field name="description" readonly="False" translate="True"/>
                <field name="condition_type" readonly="False"/>
            </xpath>
        </field>
    </record>
</odoo>
