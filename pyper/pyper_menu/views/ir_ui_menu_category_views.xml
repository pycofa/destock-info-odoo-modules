<?xml version="1.0"?>
<odoo>
    <record id="view_ir_ui_menu_category_tree" model="ir.ui.view">
        <field name="name">ir.ui.menu.category.tree</field>
        <field name="model">ir.ui.menu.category</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_ir_ui_menu_category_form" model="ir.ui.view">
        <field name="name">ir.ui.menu.category.form</field>
        <field name="model">ir.ui.menu.category</field>
        <field name="type">form</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <field
                            class="fw-bold mb-4 h1"
                            name="name"
                        />
                    </div>

                    <group>
                        <group>
                            <field name="ir_action_id"/>
                        </group>

                        <group>
                            <field name="font_icon"/>
                            <field name="font_icon_color" widget="color"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_ir_ui_menu_categories" model="ir.actions.act_window">
        <field name="name">Menu categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.ui.menu.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids"
               eval="[
                   Command.clear(),
                   Command.create({'view_mode': 'tree', 'view_id': ref('view_ir_ui_menu_category_tree')}),
                   Command.create({'view_mode': 'form', 'view_id': ref('view_ir_ui_menu_category_form')}),
               ]"
        />
    </record>
</odoo>
