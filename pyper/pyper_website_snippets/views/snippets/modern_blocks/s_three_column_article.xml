<odoo>
    <template id="three_column_article" name="Three column article">
        <section
            class="s_three_column_article py-5 o_cc o_cc1"
            data-snippet="s_three_column_article"
            data-name="Three column article"
        >
            <div class="container-fluid"  style="max-width:1296px;">
                <!-- Header -->
                <div class="row px-2">
                    <div class="col-12 col-lg-10 d-flex flex-column align-items-start" style="max-width:600px;" data-name="Header">
                        <h3 
                            class="mt-0 mb-3 o_anim_fade_in o_animate o_anim_from_left"
                            style="animation-delay: 0.0s; animation-duration: 0.4s; --wanim-intensity: 20;"
                        >Adaptive Articles</h3>
                        <p class="h6 fw-normal">
                            This snippet provides articles displayed in 3 columns that behave responsively to screen size. Feel free to add as many Article Items as needed. Try to use a balanced quantity of text in each.
                        </p>
                        <div class="d-flex align-items-center justify-content-center gap-2 my-3">
                            <a class="btn btn-primary" href="#">Going to be</a>
                            <a class="btn btn-secondary" href="#">Incredible</a>
                        </div>
                    </div>
                </div>
                <!-- Article Box-->
                <div class="row mt-2"> 
                    <div class="container" data-name="Article Box">
                        <div class="row d-flex flex-column flex-xl-row gx-4 py-3">
                            <!-- Article Item #1 -->
                            <div 
                                class="col-12 col-xl-4 mb-4 o_anim_fade_in o_animate o_anim_from_bottom"
                                style="animation-delay: 0.0s; animation-duration: 0.4s; --wanim-intensity: 20;" 
                                data-name="Article Item"
                            >
                                <div class="p-3 o_cc o_cc2">
                                    <div class="d-flex flex-column flex-md-row flex-lg-row flex-xl-column py-3">    
                                        <div class="ratio ratio-16x9">
                                            <img src="/website/static/src/img/backgrounds/peak.jpg" style="width:100%; height:100%; object-fit:cover;"/>
                                        </div>
                                        <!-- Article Item #1 content -->
                                        <div style="min-width:60%;"
                                            class="flex-grow-1 
                                                    ms-0 ms-md-4 ms-lg-4 ms-xl-0
                                                    mt-4 mt-md-0 mt-lg-0 mt-xl-4"
                                        >
                                            <div class="row">
                                                <div class="d-flex flex-column align justify-content-beetween col-12" data-name="Article Item">
                                                    <p class="h6 mb-0 text-primary">Nature and landscapes</p>
                                                    <p class="h4">Majestic mountains</p>
                                                    <p class="h6">Discover these breathtaking beauties</p>
                                                    <p class="h6 text-muted">Take a fresh breath and experience the serenity and grandeur of majestic mountains, where nature's power is on full display.</p>
                                                    <div class="d-flex align-items-center justify-content-start gap-2 mt-2">
                                                        <a class="btn btn-primary" href="#">Full article</a>
                                                        <a class="btn btn-secondary" href="#">Learn more</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Article Item #2 -->
                            <div 
                                class="col-12 col-xl-4 mb-4 o_anim_fade_in o_animate o_anim_from_bottom"
                                style="animation-delay: 0.1s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                data-name="Article Item"
                            >
                                <div class="p-3 o_cc o_cc2">
                                    <div class="d-flex flex-column flex-md-row flex-lg-row flex-xl-column py-3">    
                                        <div class="ratio ratio-16x9">
                                            <img src="/website/static/src/img/backgrounds/panama-sky.jpg" style="width:100%; height:100%; object-fit:cover;"/>
                                        </div>
                                        <!-- Article Item #2 content -->
                                        <div style="min-width:60%;"
                                            class="flex-grow-1 
                                                    ms-0 ms-md-4 ms-lg-4 ms-xl-0
                                                    mt-4 mt-md-0 mt-lg-0 mt-xl-4"
                                        >
                                            <div class="row">
                                                <div class="d-flex flex-column align justify-content-beetween col-12" data-name="Article Item">
                                                    <p class="h6 mb-0 text-primary">Sky and sunsets</p>
                                                    <p class="h4">Sunset skies</p>
                                                    <p class="h6">Witness the magic athmosphere of twilight</p>
                                                    <p class="h6 text-muted">Enjoy the vibrant hues of a sunset sky, as the day transitions into a peaceful night. Each one is a unique show by itself.</p>
                                                    <div class="d-flex align-items-center justify-content-start gap-2 mt-2">
                                                        <a class="btn btn-primary" href="#">Full article</a>
                                                        <a class="btn btn-secondary" href="#">Learn more</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Article Item #3 -->
                            <div 
                                class="col-12 col-xl-4 mb-4 o_anim_fade_in o_animate o_anim_from_bottom"
                                style="animation-delay: 0.2s; animation-duration: 0.4s; --wanim-intensity: 20;"
                                data-name="Article Item"
                            >
                                <div class="p-3 o_cc o_cc2">
                                    <div class="d-flex flex-column flex-md-row flex-lg-row flex-xl-column py-3">    
                                        <div class="ratio ratio-16x9">
                                            <img src="/website/static/src/img/backgrounds/la.jpg" style="width:100%; height:100%; object-fit:cover;"/>
                                        </div>
                                        <!-- Article Item #3 content -->
                                        <div style="min-width:60%;"
                                            class="flex-grow-1 
                                                    ms-0 ms-md-4 ms-lg-4 ms-xl-0
                                                    mt-4 mt-md-0 mt-lg-0 mt-xl-4"
                                        >
                                            <div class="row">
                                                <div class="d-flex flex-column align justify-content-beetween col-12" data-name="Article Item">
                                                    <p class="h6 mb-0 text-primary">Urban landscapes</p>
                                                    <p class="h4">Los Angeles</p>
                                                    <p class="h6">Explore the vibrant city of Los Angeles</p>
                                                    <p class="h6 text-muted">Immerse yourself in the bustling energy and iconic views of the city of Los Angeles, a well-known city that never sleeps.</p>
                                                    <div class="d-flex align-items-center justify-content-start gap-2 mt-2">
                                                        <a class="btn btn-primary" href="#">Full article</a>
                                                        <a class="btn btn-secondary" href="#">Learn more</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template inherit_id="pyper_website_snippets.custom_krafter_snippet_sections" id="custom_krafter_snippet_sections_three_column_article">
        <xpath expr="//div[@id='snippet_modern_blocks']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="pyper_website_snippets.three_column_article"
                t-thumbnail="/pyper_website_snippets/static/img/snippets/snippet_thumb/s_three_column_article.svg">
                <keywords>text, title, image, article, item, column</keywords>
            </t>
        </xpath>
    </template>
</odoo>
