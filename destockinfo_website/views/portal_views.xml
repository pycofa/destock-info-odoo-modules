<odoo>

    <template id="portal_my_details_inherit" inherit_id="portal.portal_my_details_fields">
        <xpath expr="//input[contains(@t-attf-class, 'form-control')]" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='company_name']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='email']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='phone']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='street']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='city']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='zipcode']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='vat']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
    </template>


    <template id="mass_mailing_layout_inherit" inherit_id="mass_mailing.layout">
        <xpath expr="//div[hasclass('text-center')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
    </template>

    <template id="portal_my_security_inherit" inherit_id="portal.portal_my_security">
        <xpath expr="//input[@name='old']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='new1']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>
        <xpath expr="//input[@name='new2']" position="attributes">
            <attribute name="t-attf-class" add="border-1" separator=" "/>
        </xpath>

        <!-- User Story 1 (P1 - MVP): Password Toggle on Account Security Page -->

        <!-- Make password field containers position-relative for absolute button positioning -->
        <xpath expr="//input[@name='old']/.." position="attributes">
            <attribute name="class" add="position-relative" separator=" "/>
        </xpath>

        <xpath expr="//input[@name='new1']/.." position="attributes">
            <attribute name="class" add="position-relative" separator=" "/>
        </xpath>

        <xpath expr="//input[@name='new2']/.." position="attributes">
            <attribute name="class" add="position-relative" separator=" "/>
        </xpath>

        <!-- Add toggle button after "old password" field -->
        <xpath expr="//input[@name='old']" position="after">
            <button type="button" class="password-toggle-btn"
                    aria-label="Afficher ou masquer l'ancien mot de passe"
                    aria-pressed="false" tabindex="0">
                <i class="fa fa-eye password-toggle-btn__icon"></i>
            </button>
        </xpath>

        <!-- Add toggle button after "new password" field -->
        <xpath expr="//input[@name='new1']" position="after">
            <button type="button" class="password-toggle-btn"
                    aria-label="Afficher ou masquer le nouveau mot de passe"
                    aria-pressed="false" tabindex="0">
                <i class="fa fa-eye password-toggle-btn__icon"></i>
            </button>
        </xpath>

        <!-- Add toggle button after "password confirmation" field -->
        <xpath expr="//input[@name='new2']" position="after">
            <button type="button" class="password-toggle-btn"
                    aria-label="Afficher ou masquer la confirmation du mot de passe"
                    aria-pressed="false" tabindex="0">
                <i class="fa fa-eye password-toggle-btn__icon"></i>
            </button>
        </xpath>
    </template>


</odoo>
