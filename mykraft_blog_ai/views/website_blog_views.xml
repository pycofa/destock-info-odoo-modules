<?xml version="1.0"?>
<odoo>
    <record id="view_blog_blog_form" model="ir.ui.view">
        <field name="name">blog.blog.ai.form</field>
        <field name="model">blog.blog</field>
        <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subtitle']" position="after">
                <field name="ai_description" placeholder="Write AI description here"/>
            </xpath>
        </field>
    </record>
</odoo>