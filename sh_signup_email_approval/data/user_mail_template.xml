<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sh_user_mail_template" model="mail.template">
            <field name="name">OTP Verification</field>
            <field name="model_id" ref="sh_signup_email_approval.model_sh_signup_outh" />
            <field name="subject">Verfification Email</field>
            <field name="auto_delete" eval="False" />
            <field name="body_html" type="html">
                 <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Email: <strong><t t-out="object.email or ''"/></strong> ,
                    <br />
                    Your Verification code is: <strong><t t-out="object.name or ''"/></strong>
                    <br />
                    <br />
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>
