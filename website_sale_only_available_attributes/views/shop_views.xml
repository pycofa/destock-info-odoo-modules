<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="o_wsale_offcanvas" inherit_id="website_sale.o_wsale_offcanvas">

        <xpath expr="//div[hasclass('list-group-item')]//div" position="before">
            <t t-if="v.pav_available and v.pav_visible_shop"/>
        </xpath>
        <xpath expr="//t[@t-if='v.pav_available and v.pav_visible_shop']" position="inside">
            <xpath expr="///div[hasclass('list-group-item')]//div" position="move"/>
        </xpath>

    </template>

    <template id="products_attributes" inherit_id="website_sale.products_attributes">

        <xpath expr="//form[hasclass('js_attributes')]//div[hasclass('form-check')]" position="before">
            <t t-if="v.pav_available and v.pav_visible_shop"/>
        </xpath>
        <xpath expr="//t[@t-if='v.pav_available and v.pav_visible_shop']" position="inside">
            <xpath expr="//form[hasclass('js_attributes')]//div[hasclass('form-check')]" position="move"/>
        </xpath>

    </template>

</odoo>
